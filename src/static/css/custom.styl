h1
h2
h3
h4
h5
h6
.main-h1
.main-h2
.main-h3
.main-h4
.main-h5
.main-h6
    line-height: 1.38
    margin: 0 0 1em
    font-weight: 400
    text-align: center

    &_center
        text-align: center

    &_bold
        font-weight: 700

    &:last-child
        margin-bottom: 0

textarea, button, select, input
    font-family: $base-font-family

*
*::before
*::after
    box-sizing: border-box
    outline none

.text
    color $color-text
    font-size 16px

.title
    color: rgba(0,0,0,.8)
    font-size: 24px
    text-align: center
    font-weight: 700
    line-height: 1.5
    +above(l)
        font-size: 30px

.subtitle
    font-size: 16px
    font-weight: 700
    color: $color-main3
    text-align: center


.icon
    border-radius 50%
    background rgba(0, 0, 0, 0.05)
    display flex
    color: $color-main
    justify-content center
    align-items center

ul
ol
    list-style-type: none
    margin: 0
    padding: 0

html
    height 100%

body
    font-family: $base-font-family
    font-size: $base-font-size
    font-weight: normal
    color: $color-main
    background: $body-bg
    background-size: 0.3em 0.3em;
    background-color: #fafafa;
    min-width: 320px
    min-height: 100%
    line-height: 1.8
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

p
    margin: 0 0 1em

    &:last-child
        margin-bottom: 0

    b
        font-weight: 500

.main-hidden-link
    white-space: nowrap
    text-decoration: none

    &:link
    &:visited
    &:hover
    &:active
        color: #000

.wrapper
    position: relative
    max-width: $wrapper-width
    min-width: 320px
    width: 100%
    padding-left: 20px
    padding-right: 20px
    push-auto()
    +above(m)
        max-width: $wrapper-width_m
    +above(t)
        max-width: $wrapper-width_t
        padding-left: $wrapper-padding
        padding-right: $wrapper-padding
    +above(l)
        max-width: $wrapper-width

body
    display: flex
    flex-direction: column
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
        display: block

.main-img
    img()

.background
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    opacity: .5
    background #000
    z-index 3

.hidd-block
  opacity: 0
  visibility: hidden

.ftco-animated
  animation-duration: .5s
  animation-fill-mode: both

.fadeInUp
  animation-name: fadeInUp

@keyframes fadeInUp
  from
    opacity: 0
    visibility: hidden
    transform: translate3d(0, 40px, 0)
  to
    opacity: 1
    visibility: visible
    transform: none
