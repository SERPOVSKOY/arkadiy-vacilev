.header
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap
    padding 8px 0
    background #000
    position absolute
    top 0
    width 100%
    height auto
    z-index 2
    +above(l)
        background transparent
        top: 20px
    &.scrolled
        position: fixed
        right: 0
        left: 0
        top: 0
        margin-top: -130px
        background: white
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1)
        & .header__navLink,
        & .header__logo
            color: black
        & .header__navLink.active
            color: $color-main
    &.scrolled.awake
        margin-top: 0px
        transition: .3s all ease-out
    &.scrolled.sleep
        transition: .3s all ease-out
    &__block
        display flex
        justify-content space-between
        align-items center
        width 100%
        +above(l)
            width auto

    &__wrapper
        display flex
        justify-content space-between
        align-items center
        flex-direction column
        +above(l)
            flex-direction row
            padding 0


    &__logo
        display flex
        flex-direction column
        font-weight 700
        font-size 20px
        line-height 1
        color: white
        text-transform uppercase
        text-decoration none
        padding-top 0.3125rem
        padding-bottom 0.3125rem
        margin-right 1rem

        span
            display: block
            font-size: 11px
            font-weight: 600
            line-height 1
            color: white

    &__nav
        visibility hedden
        width 100%
        overflow hidden
        height 0
        position relative
        transition height 0.3s ease
        +above(l)
            display flex
            height auto
            width auto
            &.show
                display flex
                height auto

        &.show
            visibility visible
            height 275px
            transition height 0.3s ease

    &__navList
        display flex
        justify-content center
        align-items center
        flex-direction column
        width 100%
        visibility hidden

        &.show
            visibility visible
            transition bottom 0.3s ease
        +above(l)
            flex-direction row
            width auto
            visibility visible

    &__navItem
        padding-top .9rem
        padding-bottom .9rem
        display flex
        width 100%
        justify-content flex-start
        +above(l)
            width auto
            padding-left 20px
            padding-right 20px

    &__navLink
        text-decoration none
        font-size 15px
        font-weight 400
        width 100%
        color: white
        &.active
            color $color-main

        &:hover
            color $color-main

    &__burger
        display flex
        justify-content center
        align-items center
        color $color-grey
        background transparent
        border none
        text-transform uppercase
        font-size 16px
        letter-spacing .1em
        cursor pointer
        +above(l)
            display none

        & > p
            margin-top 2px

        & > span
            display block
            margin-right 8px
            height 2px
            width 16px
            background $color-grey
            position relative

            &:after
                content ''
                display block
                height 2px
                width 100%
                background $color-grey
                position relative
                bottom 8px

            &:before
                content ''
                display block
                height 2px
                width 100%
                background $color-grey
                position relative
                top 6px
