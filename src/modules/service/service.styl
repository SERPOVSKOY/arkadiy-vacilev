.service
    &__wrapper
        display flex
        flex-direction: column
        justify-content: center
        align-items: center
        padding-top: 25px
        padding-bottom: 50px
        padding-left: 10px
        padding-right: 10px
    &__list
        display flex
        justify-content: center
        align-content: center
        width: 100%
        flex-direction: row
        flex-wrap: wrap
    &__item
        border: 1px solid rgba(0,0,0,.1)
        padding: 20px 20px 30px
        display: flex
        flex: 0 0 25%
        align-items: center
        flex-direction: column
        margin: 30px 10px 10px
        cursor pointer
        border-radius: 3px
        transition: .3s
        position relative 
        width 100%
        min-width 300px
        +above(t)
            margin: 20px 10px
            flex: 0 0 18%
        &:hover .service__icon
            background: $color-main2
            color: $color-main3
            transition: .3s
    &__icon
        width: 150px
        height 150px
        font-size: 50px
        margin-bottom: 20px
        transition: .3s
        box-shadow: 0 0 20px rgba(0,0,0,.3)
    &__name
        color: #000
        font-size: 20px
        line-height: 1.5
        text-decoration: none
        text-align: center
        margin-bottom: 20px
    &__description
        font-size: 15px
        text-align: left
        width: 100%
    &__link
        display flex
        justify-content center
        align-items center
        color: $color-main3
        position: absolute
        bottom: -18px
        left: 0
        right: 0
        width max-content
        border-radius: 3px
        padding: 3px 20px
        background: $color-main2
        margin: 0 auto
        opacity: 1
        transition: all 0.3s ease
        text-decoration: none
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5)
        &:hover
            color: white
            transition: .3s
            background-color: $color-main3
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)

    &__title
        margin: 0px

