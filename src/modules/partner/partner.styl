.partner
    padding: 50px 0
    & img 
        width 100%
        height 100%
        border-radius: 20px
    &__wrapItem
        height: 400px
        margin: 40px
        position: relative
        &::after
            content: ""
            background-image: url(../../static/images/clickMe.gif)
            width: 59px
            position: absolute
            background-size: contain
            background-repeat: no-repeat
            height: 60px
            left: -10px
            z-index: 999999
            top: 10px
            transform: rotate(21deg) translate(-50%,-50%)
        +above(m)
            margin: 20px
        +above(t)
            &::after
                display: none
            &:hover
                &::after
                    display: block
                    width 70px
                    height 70px
                    left -32px
                    top 12px
        +above(l)
            margin: 40px

        &-front
            box-shadow: 0 15px 25px -10px #0000009e
            height: 100%
            width: 100%
            backface-visibility: hidden
            border-radius: 0px
            transition: 0.3s
            transform-style: preserve-3d
            transform: rotateY(0deg)
            position: absolute
            top: 0
            border-radius: 20px
            left: 0
            &.active
                transform: rotateY(0deg)
            &.hidd
                transform: rotateY(180deg)
        &-back
            box-shadow: 0 15px 25px -10px #0000009e
            background: rgba(0,0,0,.05)
            position: absolute
            width 100%
            height 100%
            backface-visibility: hidden
            border-radius: 0px
            transition: 0.3s
            transform-style: preserve-3d
            transform: rotateY(180deg)
            position: absolute
            top: 0
            left: 0
            border-radius: 20px
            &.active
                transform: rotateY(0deg)
            &.hidd
                transform: rotateY(180deg)
    &__info
        position: absolute
        color: #f9f9f9
        bottom: 0px
        width: 100%
        background: #0000007a
        padding: 15px
        border-radius: 0 0 20px 20px
        display: flex
        flex-direction: column

    &__name
        color: white
        margin 0

    &__link
        color: $color-main
        text-decoration: none
        text-align: center
        transition: .3s
        &:hover
            transition: .3s
            color: $color-main2

    &__description
        color black
        font-size 16px

    &__item
        width 90%

    &-comment
        background-size: contain
        background-repeat: no-repeat
        background-position: center
        &-1
            background-image: url('../../static/images/comment-1.jpeg')
        &-2
            background-image: url('../../static/images/comment-2.jpeg')
        &-3
            background-image: url('../../static/images/comment-3.jpeg')
        &-4
            background-image: url('../../static/images/comment-4.jpeg')
        &-5
            background-image: url('../../static/images/comment-5.jpeg')
    &-front
        background-size: cover
        background-repeat: no-repeat
        background-position: top
        &-1
            background-image: url('../../static/images/p1.jpg')
        &-2
            background-image: url('../../static/images/p2.jpg')
        &-3
            background-image: url('../../static/images/p3.jpg')
        &-4
            background-image: url('../../static/images/p4.jpg')
        &-5
            background-image: url('../../static/images/p5.jpg')